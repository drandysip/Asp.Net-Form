@model DarlCommon.QuestionSetProxy

@{
    ViewBag.Title = "Darl Forms Run";
}

@using (Html.BeginForm())
{

    <div class="form-horizontal">

        @Html.HiddenFor(model => model.ieToken)
        @Html.HiddenFor(model => model.Language)

        <h2>@Html.DisplayFor(model => model.Preamble)</h2>

        @if (Model.questions != null)
        {
            <h4>
                @Html.DisplayFor(model => model.QuestionHeader)
            </h4>
            @Html.EditorFor(model => model.questions)
        }

        @if (Model.responses != null)
        {
            <h4>
                @Html.DisplayFor(model => model.ResponseHeader)
            </h4>
            @Html.DisplayFor(model => model.responses)
        }

        @{
        var hideBack = Model.CanUnwind ? "" : "disabled=\"disabled\"";
        var hideNext = Model.Complete ? "disabled=\"disabled\"" : "";
        }

        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <input type="submit" value="Back" name="backButton" class="btn btn-primary" @hideBack />
                <input type="submit" value="Next" name="nextButton" class="btn btn-primary" @hideNext />
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-4">
                Progress
            </div>

            <div class="col-md-offset-4 col-md-6">
                <div class="progress-bar progress-bar-info" style="width: @Model.PercentComplete%;"> @Html.DisplayFor(model => model.PercentComplete)%</div>
            </div>
        </div>
    </div>
}




@section Scripts {



}
